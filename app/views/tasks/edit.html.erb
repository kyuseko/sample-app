<!DOCTYPE html>
<html>
<% provide(:title, 'タスク新規作成') %>
 <div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">タスク編集</h1>
     <div class="row">
       <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @task, url: user_task_path(@user), local: true) do |f| %>  <!-- 詳細ページ -->
           <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
   
           <%= f.label :"名称", class: "label-form" %>
           <%= f.text_field :name, class: "form-control" %>

           <%= f.label :"詳細", class: "label-form" %>
           <%= f.text_area :description, rows: 5, class: "form-control" %>

           <%= f.submit "更新", class: "btn btn-lg btn-primary btn-form" %>
           <%= f.submit "キャンセル", class: "btn btn-default btn-form" %>
        <% end %>
       </div>
     </div>
  </div>
 </div>
</html>

