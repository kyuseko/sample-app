<% if @user.errors.any? %>     <!-- @userに対しエラーが発生しているかどうか条件式 -->
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力した内容に<%= pluralize(@user.errors.count, "error") %>件のエラーがあります。
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


